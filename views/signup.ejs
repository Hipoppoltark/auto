<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script type="text/javascript">
  $(function(){
      //register
      var flag = true;
      $('.registr').on('click', function(e){
        e.preventDefault();

        if (flag) {
          flag = false;
          $('.register').show('slow');
          $('.sign-in').hide();
        } else{
          flag = true;
          $('.sign-in').show('slow');
          $('.register').hide();
        }
      });
     $('.register').on('submit', function(e) {
      e.preventDefault();

      const form = this;
      var data = {
